@startuml Admin Module
!theme plain
title "QUẢN TRỊ (ADMIN)"

left to right direction

actor "Admin" as Admin
actor "Supabase System" as Supabase

rectangle "Admin Operations" {
    usecase "Đăng nhập Admin" as AdminLogin
    usecase "Quản lý người dùng" as UserManagement
    usecase "Xác thực danh tính" as IdentityVerification
    usecase "Báo cáo hệ thống" as SystemReports
}

Admin --> AdminLogin
Admin --> UserManagement
Admin --> IdentityVerification
Admin --> SystemReports

Supabase --> AdminLogin : authenticate admin
Supabase --> UserManagement : manage users
Supabase --> IdentityVerification : verify documents
Supabase --> SystemReports : generate reports

@enduml
