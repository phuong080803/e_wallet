@startuml E-Wallet Overview
!theme plain
title "HỆ THỐNG VÍ ĐIỆN TỬ - TỔNG QUÁT"

actor User
actor Admin
actor System as "Backend"

rectangle "E-WALLET" {
    usecase "Đăng ký/Đăng nhập" as Auth
    usecase "Quản lý thông tin" as Profile
    usecase "Tạo & Quản lý ví" as Wallet
    usecase "Chuyển tiền" as Transfer
    usecase "Xem lịch sử" as History
    usecase "Quản trị hệ thống" as Admin_Ops
}

User --> Auth
User --> Profile
User --> Wallet
User --> Transfer
User --> History

Admin --> Auth
Admin --> Admin_Ops

System --> Auth : xác thực
System --> Wallet : tạo ví & xử lý giao dịch
System --> Admin_Ops : quản lý dữ liệu

Transfer ..> System : <<include>>
Admin_Ops ..> System : <<include>>

@enduml
